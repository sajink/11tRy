<nav id="header">
  <div id="menu" class="float-right">
    <div class="flex flex-row flex-wrap items-center justify-center py-3 text-white sm:py-0">
      <ul class="flex m-0 mx-auto text-center">
        {% for item in site.social %}
        <li class="p-1">
          <a href="{{ item.url }}" target="_blank" rel="_noopener">
            <img class="hover:opacity-60" src="{{ item.image }}" alt="{{item.name}} logo"  height="24px" width="24px">
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</nav>
<div id="header-filler"></div>
